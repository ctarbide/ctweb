
=all
,.PHONY: all
,all: $(NOFAKE_CHUNKS)
@

=config.nw
type generated
,config.nw: Makefile
,	set -eu; >.tmp.config.nw; \
,	    printf '<<AWK>>=\n%s\n' '$(AWK)' >>.tmp.config.nw; \
,	    printf '<<PREFIX>>=\n%s\n' '$(PREFIX)' >>.tmp.config.nw; \
,	    printf '<<LIBDIR>>=\n%s\n' '<<PREFIX>>/lib/noweb' >>.tmp.config.nw; \
,	    printf '@\n' >> .tmp.config.nw
,	$(MV) '.tmp.config.nw' 'config.nw'
,	$(CHMOD_0444) 'config.nw'
@

=htmltoc
type nofake
source config.nw
source docdate.nw
source htmltoc.nw
chunk * htmltoc.1
@

=noweb
type nofake
source config.nw
source docdate.nw
source noweb.nw
source manpage.nw
chunk noweb.1 noweb.1
@

=notangle
type nofake
source config.nw
